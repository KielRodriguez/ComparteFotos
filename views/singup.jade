extends ./layout.jade

block contenido
	header
		h1 Validaci칩n de usuario
		h2 Ingresa usuario y contrase침a
	section(style="width:80%;")
		form(action="/singup", method="POST")
			div(class="row")
				div(class="col-xs-12 col-md-12")
					div(class='form-group')
						label(for='Nombre') Nombre
						input(type='text' id='name' name='name' class='form-control')
			div(class='row')
				div(class='col-xs-12 col-md-12')
					div(class="form-group")
						label(for="email") Email
						input(type="text" id="email" class="form-control" name="email")
			div(class='row')
				div(class='col-xs-12 col-md-6')
					div(class='form-group')
						label(for='username') Nombre de usuario
						input(type='text' id='username' name='username' class='form-control')
			div(class='row')
				div(class='col-xs-12 col-md-6')
					div(class="form-group")
						label(for="password") Contrase침a
						input(type="password", id="password" class="form-control" name="password")
				div(class='col-xs-12 col-md-6')
					div(class='form-group')
						label(for="password_confirmation") Confirma contrase침a
						input(type='password' id='password_confirmation' name='password_confirmation' class='form-control')
			div(class='row')
				div(class='col-xs-12 col-md-6')
					div(class='form-group')
						label(for='age') Edad
						input(type='number' id='age' name='age' max='100' min='4' class='form-control')
				div(class='col-xs-12 col-md-6')
					div(class='form-group')
						label(for='day_of_birthday') Fecha nacimento
						input(type='date' id='day_of_birthday' name='day_of_birthday' class='form-control')
			div(class='row')
				div(class='col-xs-12 col-md-6')
					div(class='form-group')
						label(for='sex') Sexo
						select(class='form-control' id='sex' name='sex')
							option(value='F') Femenino
							option(value='M') Masculino
			div(class='row')
				div(class='col-xs-12 col-md-4 col-md-offset-4')
					input(type="submit", value="Validar datos" class="btn btn-primary btn-larger- btn-block")

		a(href="/") Regresar al inicio