extends ../../layout.jade

block contenido
	div(class='col-sm-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 big-top-space')
		header
			h1 Compartir nueva imagen 	
		form(action='/app/imagenes/#{imagen._id}?_method=PUT' method='POST')
			div(class='row')
				div(class='col-sm-12 col-md-12')
					div(class='form-group')
						label(for='title') Titulo
						input(type='text' id='title' placeholder='Titulo de la imagen' name='title' class='form-control' value="#{imagen.title}")
			div(class='row')
				div(class='col-sm-12 col-md-6 col-lg-6')
					input(type='submit' value='Almacenar imagen' class='btn btn-primary')